            <div class="tab-content" id="issues">
                <h3>Common Synchronization Issues</h3>
                <table class="comparison-table">
                    <thead>
                        <tr>
                            <th>Issue</th>
                            <th>Description</th>
                            <th>Symptoms</th>
                            <th>Severity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Race Condition</td>
                            <td>When multiple threads access shared data simultaneously and at least one modifies it</td>
                            <td>Inconsistent results, corrupted data</td>
                            <td><span class="badge badge-danger">High</span></td>
                        </tr>
                        <tr>
                            <td>Deadlock</td>
                            <td>Two or more threads waiting indefinitely for resources held by each other</td>
                            <td>System hangs, unresponsive threads</td>
                            <td><span class="badge badge-danger">Critical</span></td>
                        </tr>
                        <tr>
                            <td>Starvation</td>
                            <td>Threads are unable to gain regular access to shared resources</td>
                            <td>Some threads make little or no progress</td>
                            <td><span class="badge badge-warning">Medium</span></td>
                        </tr>
                        <tr>
                            <td>Priority Inversion</td>
                            <td>Higher-priority thread waits for lower-priority thread to release resource</td>
                            <td>Unexpected delays in critical tasks</td>
                            <td><span class="badge badge-warning">Medium</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="tab-content" id="solutions">
                <h3>Synchronization Methods Comparison</h3>
                <table class="comparison-table">
                    <thead>
                        <tr>
                            <th>Method</th>
                            <th>Description</th>
                            <th>Pros</th>
                            <th>Cons</th>
                            <th>Best For</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Mutex</td>
                            <td>Mutual exclusion lock that allows only one thread at a time</td>
                            <td>Simple, efficient for single resources</td>
                            <td>Can lead to deadlocks if not used carefully</td>
                            <td>Protecting critical sections</td>
                        </tr>
                        <tr>
                            <td>Semaphore</td>
                            <td>Counter that controls access to a pool of resources</td>
                            <td>Flexible, can manage multiple resources</td>
                            <td>More complex than mutex</td>
                            <td>Resource pools, producer-consumer</td>
                        </tr>
                        <tr>
                            <td>Monitor</td>
                            <td>High-level synchronization construct with condition variables</td>
                            <td>Safer, less error-prone</td>
                            <td>Language support required</td>
                            <td>Complex synchronization scenarios</td>
                        </tr>
                        <tr>
                            <td>Atomic Operations</td>
                            <td>Operations that complete in a single step without interruption</td>
                            <td>Very fast, no locking needed</td>
                            <td>Limited to simple operations</td>
                            <td>Counters, flags</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Global variables
        let threads = [];
        let resources = ['R1', 'R2', 'R3'];
        let simulationRunning = false;
        let startTime;
        let deadlockDetected = false;
        let raceConditions = 0;
        let logEntries = [];
        let performanceData = [];

        // DOM elements
        const startBtn = document.getElementById('start-btn');
        const resetBtn = document.getElementById('reset-btn');
        const syncMethod = document.getElementById('sync-method');
        const threadCount = document.getElementById('thread-count');
        const threadsContainer = document.getElementById('threads');
        const visualization = document.getElementById('visualization');
        const logContainer = document.getElementById('log');
        const runningCount = document.getElementById('running-count');
        const blockedCount = document.getElementById('blocked-count');
        const deadlockCount = document.getElementById('deadlock-count');
        const raceCount = document.getElementById('race-count');
        const totalTime = document.getElementById('total-time');
        const avgWait = document.getElementById('avg-wait');
        const throughput = document.getElementById('throughput');
        const resourceUtil = document.getElementById('resource-util');
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');

        // Initialize the visualization
        function initVisualization() {
            visualization.innerHTML = '';
            
            // Create resource nodes
            resources.forEach((resource, index) => {
                const node = document.createElement('div');
                node.className = 'resource-node';
                node.textContent = resource;
                node.id = resource-${resource};
                
                // Position resources in a circle
                const angle = (index * (2 * Math.PI / resources.length));
                const centerX = visualization.offsetWidth / 2;
                const centerY = visualization.offsetHeight / 2;
                const radius = Math.min(centerX, centerY) * 0.7;
                
                node.style.left = ${centerX + radius * Math.cos(angle) - 30}px;
                node.style.top = ${centerY + radius * Math.sin(angle) - 30}px;
                
                visualization.appendChild(node);
            });
        }

        // Create thread elements
        function createThreadElements(count) {
            threadsContainer.innerHTML = '';
            
            for (let i = 0; i < count; i++) {
                const thread = document.createElement('div');
                thread.className = 'thread';
                thread.id = thread-${i};
                thread.innerHTML = `
                    <div class="thread-id">Thread ${i}</div>
                    <div class="thread-state">
                        <div>State: <span id="thread-state-${i}">Ready</span></div>
                        <div class="thread-progress">
                            <div class="progress-bar" id="thread-progress-${i}" style="width: 0%"></div>
                        </div>
                    </div>
                `;
                threadsContainer.appendChild(thread);
            }
        }

        // Add log entry
        function addLog(message, type = '') {
            const now = new Date();
            const timeString = now.toLocaleTimeString();
            const logEntry = document.createElement('div');
            logEntry.className = log-entry ${type};
            logEntry.innerHTML = <span class="log-time">${timeString}</span><span class="log-message">${message}</span>;
            logContainer.appendChild(logEntry);
            logContainer.scrollTop = logContainer.scrollHeight;
            
            logEntries.push({
                time: now,
                message: message,
                type: type
            });
        }

        // Update thread visualization
        function updateThreadVisualization() {
            const centerX = visualization.offsetWidth / 2;
            const centerY = visualization.offsetHeight / 2;
            const radius = Math.min(centerX, centerY) * 0.5;
            
            // Remove old thread nodes
            document.querySelectorAll('.thread-node').forEach(node => node.remove());
            document.querySelectorAll('.edge').forEach(edge => edge.remove());
            
            // Create new thread nodes
            threads.forEach((thread, index) => {
                if (thread.state === 'terminated') return;
                
                const node = document.createElement('div');
                node.className = thread-node ${thread.state};
                node.textContent = T${thread.id};
                node.id = visual-thread-${thread.id};
                
                // Position threads
                const angle = (index * (2 * Math.PI / threads.length));
                const x = centerX + radius * Math.cos(angle) - 25;
                const y = centerY + radius * Math.sin(angle) - 25;
                
                node.style.left = ${x}px;
                node.style.top = ${y}px;
                visualization.appendChild(node);
                
                // Draw edges to resources if waiting or holding
                if (thread.waitingFor) {
                    const resourceNode = document.getElementById(resource-${thread.waitingFor});
                    if (resourceNode) {
                        const resourceRect = resourceNode.getBoundingClientRect();
                        const threadRect = node.getBoundingClientRect();
                        
                        const edge = document.createElement('div');
                        edge.className = 'edge';
                        
                        const startX = threadRect.left + threadRect.width / 2 - visualization.getBoundingClientRect().left;
                        const startY = threadRect.top + threadRect.height / 2 - visualization.getBoundingClientRect().top;
                        const endX = resourceRect.left + resourceRect.width / 2 - visualization.getBoundingClientRect().left;
                        const endY = resourceRect.top + resourceRect.height / 2 - visualization.getBoundingClientRect().top;
                        
                        const length = Math.sqrt(Math.pow(endX - startX, 2) + Math.pow(endY - startY, 2));
                        const angle = Math.atan2(endY - startY, endX - startX) * 180 / Math.PI;
                        
                        edge.style.width = ${length}px;
                        edge.style.left = ${startX}px;
                        edge.style.top = ${startY}px;
                        edge.style.transform = rotate(${angle}deg);
                        
                        visualization.appendChild(edge);
                    }
                }
            });
        }

        // Update statistics
        function updateStats() {
            const running = threads.filter(t => t.state === 'running').length;
            const blocked = threads.filter(t => t.state === 'blocked').length;
            const waiting = threads.filter(t => t.state === 'waiting').length;
            
            runningCount.textContent = running;
            blockedCount.textContent = blocked + waiting;
            deadlockCount.textContent = deadlockDetected ? 1 : 0;
            raceCount.textContent = raceConditions;
            
            // Update progress bars
            threads.forEach(thread => {
                const progressBar = document.getElementById(thread-progress-${thread.id});
                if (progressBar) {
                    progressBar.style.width = ${thread.progress}%;
                }
                
                const stateElement = document.getElementById(thread-state-${thread.id});
                if (stateElement) {
                    stateElement.textContent = thread.state.charAt(0).toUpperCase() + thread.state.slice(1);
                    stateElement.className = thread.state;
                }
            });
        }

        // Check for deadlocks
        function checkForDeadlocks() {
            // Simple deadlock detection - look for circular waits
            const waitingThreads = threads.filter(t => t.state === 'waiting');
            const resourceMap = {};
            
            // Map resources to their holders
            threads.forEach(thread => {
                if (thread.holding.length > 0) {
                    thread.holding.forEach(resource => {
                        resourceMap[resource] = thread.id;
                    });
                }
            });
            
            // Check if any waiting thread is part of a cycle
            for (const thread of waitingThreads) {
                const visited = new Set();
                let currentThreadId = thread.id;
                let currentResource = thread.waitingFor;
                
                while (currentResource && resourceMap[currentResource]) {
                    if (visited.has(currentThreadId)) {
                        // Cycle detected!
                        if (!deadlockDetected) {
                            addLog(Deadlock detected involving Thread ${currentThreadId} and Resource ${currentResource}, 'error');
                            deadlockDetected = true;
                        }
                        return true;
                    }
                    
                    visited.add(currentThreadId);
                    currentThreadId = resourceMap[currentResource];
                    const currentThread = threads.find(t => t.id === currentThreadId);
                    currentResource = currentThread?.waitingFor;
                }
            }
            
            deadlockDetected = false;
            return false;
        }

        // Simulate thread work
        async function simulateThreadWork() {
            startTime = Date.now();
            performanceData = [];
            
            while (simulationRunning) {
                // Update performance data
                const elapsed = Date.now() - startTime;
                const running = threads.filter(t => t.state === 'running').length;
                const blocked = threads.filter(t => t.state === 'blocked' || t.state === 'waiting').length;
                performanceData.push({ time: elapsed, running, blocked });
                
                // Process each thread
                for (const thread of threads) {
                    if (thread.state === 'terminated') continue;
                    
                    // Randomly decide to request a resource
                    if (Math.random() < 0.3 && thread.state === 'running' && thread.holding.length < 2) {
                        const resource = resources[Math.floor(Math.random() * resources.length)];
                        
                        // Check if resource is available
                        const resourceHolder = threads.find(t => t.holding.includes(resource));
                        
                        if (resourceHolder) {
                            // Resource is held by another thread
                            thread.state = 'waiting';
                            thread.waitingFor = resource;
                            addLog(Thread ${thread.id} waiting for Resource ${resource} (held by Thread ${resourceHolder.id}), 'warning');
                            
                            // With no synchronization, this can lead to race conditions
                            if (syncMethod.value === 'none' && Math.random() < 0.5) {
                                raceConditions++;
                                addLog(Race condition detected with Resource ${resource}, 'error');
                            }
                        } else {
                            // Acquire resource
                            thread.holding.push(resource);
                            addLog(Thread ${thread.id} acquired Resource ${resource}, 'success');
                        }
                    }
                    
                    // Randomly release resources
                    if (thread.holding.length > 0 && Math.random() < 0.2) {
                        const releasedResource = thread.holding.pop();
                        addLog(Thread ${thread.id} released Resource ${releasedResource}, 'success');
                        
                        // Check if any thread is waiting for this resource
                        const waitingThread = threads.find(t => t.waitingFor === releasedResource);
                        if (waitingThread) {
                            waitingThread.state = 'running';
                            waitingThread.holding.push(releasedResource);
                            waitingThread.waitingFor = null;
                            addLog(Thread ${waitingThread.id} acquired Resource ${releasedResource} after waiting, 'success');
                        }
                    }
                    
                    // Make progress if running
                    if (thread.state === 'running') {
                        thread.progress = Math.min(100, thread.progress + Math.random() * 5);
                        
                        if (thread.progress >= 100) {
                            thread.state = 'terminated';
                            addLog(Thread ${thread.id} completed execution, 'success');
                            
                            // Release all held resources
                            thread.holding.forEach(resource => {
                                addLog(Thread ${thread.id} released Resource ${resource} upon termination, 'success');
                                
                                const waitingThread = threads.find(t => t.waitingFor === resource);
                                if (waitingThread) {
                                    waitingThread.state = 'running';
                                    waitingThread.holding.push(resource);
                                    waitingThread.waitingFor = null;
                                    addLog(Thread ${waitingThread.id} acquired Resource ${resource} after waiting, 'success');
                                }
                            });
                            thread.holding = [];
                        }
                    }
                    
                    // Block randomly (simulating I/O or other operations)
                    if (thread.state === 'running' && Math.random() < 0.1) {
                        thread.state = 'blocked';
                        thread.blockedUntil = Date.now() + 1000 + Math.random() * 2000;
                        addLog(Thread ${thread.id} blocked (I/O operation), 'warning');
                    }
                    
                    // Unblock if time has passed
                    if (thread.state === 'blocked' && thread.blockedUntil && Date.now() > thread.blockedUntil) {
                        thread.state = 'running';
                        thread.blockedUntil = null;
                        addLog(Thread ${thread.id} unblocked, 'success');
                    }
                }
                
                // Check for deadlocks
                checkForDeadlocks();
                
                // Update UI
                updateStats();
                updateThreadVisualization();
                
                // Check if all threads are terminated
                if (threads.every(t => t.state === 'terminated')) {
                    simulationRunning = false;
                    addLog('All threads completed execution', 'success');
                    startBtn.disabled = false;
                    resetBtn.disabled = false;
                    
                    // Calculate final performance metrics
                    const totalDuration = Date.now() - startTime;
                    totalTime.textContent = ${totalDuration} ms;
                    
                    const waitTimes = threads.map(t => t.waitTime || 0);
                    const avgWaitTime = waitTimes.reduce((a, b) => a + b, 0) / waitTimes.length;
                    avgWait.textContent = ${avgWaitTime.toFixed(1)} ms;
                    
                    throughput.textContent = ${(threads.length / (totalDuration / 1000)).toFixed(2)} ops/s;
                    
                    const totalResourceTime = threads.reduce((sum, thread) => {
                        return sum + (thread.holding.length * (Date.now() - thread.startTime));
                    }, 0);
                    const utilization = (totalResourceTime / (resources.length * totalDuration)) * 100;
                    resourceUtil.textContent = ${utilization.toFixed(1)}%;
                    
                    break;
                }
                
                // Slow down the simulation
                await new Promise(resolve => setTimeout(resolve, 500));
            }
        }

        // Start simulation
        function startSimulation() {
            const count = parseInt(threadCount.value) || 5;
            threads = [];
            
            // Initialize threads
            for (let i = 0; i < count; i++) {
                threads.push({
                    id: i,
                    state: 'running',
                    progress: 0,
                    holding: [],
                    waitingFor: null,
                    blockedUntil: null,
                    startTime: Date.now(),
                    waitTime: 0
                });
            }
            
            // Reset counters
            deadlockDetected = false;
            raceConditions = 0;
            logEntries = [];
            logContainer.innerHTML = '';
            
            // Update UI
            createThreadElements(count);
            initVisualization();
            updateStats();
            
            // Start simulation
            simulationRunning = true;
            startBtn.disabled = true;
            resetBtn.disabled = true;
            addLog(Simulation started with ${count} threads using ${syncMethod.value} synchronization);
            
            simulateThreadWork();
        }

        // Reset simulation
        function resetSimulation() {
            simulationRunning = false;
            threads = [];
            threadsContainer.innerHTML = '';
            logContainer.innerHTML = '';
            visualization.innerHTML = '';
            
            runningCount.textContent = '0';
            blockedCount.textContent = '0';
            deadlockCount.textContent = '0';
            raceCount.textContent = '0';
            
            totalTime.textContent = '0 ms';
            avgWait.textContent = '0 ms';
            throughput.textContent = '0 ops/ms';
            resourceUtil.textContent = '0%';
            
            startBtn.disabled = false;
            resetBtn.disabled = true;
        }

        // Tab switching
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tabContents.forEach(c => c.classList.remove('active'));
                
                tab.classList.add('active');
                const tabId = tab.getAttribute('data-tab');
                document.getElementById(tabId).classList.add('active');
            });
        });

        // Event listeners
        startBtn.addEventListener('click', startSimulation);
        resetBtn.addEventListener('click', resetSimulation);

        // Initialize
        initVisualization();
        addLog('System ready. Configure settings and click "Start Simulation" to begin.');
    </script>
</body>
</html>
